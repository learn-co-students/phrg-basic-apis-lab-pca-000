<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<br>
<div>
<% if @response %>
  <% @response.each do |r| %>
    <%= link_to r["html_url"], r["html_url"]  %><br>
    <%= r["description"] %><br>
  <% end %>
<% end %>
</div>
